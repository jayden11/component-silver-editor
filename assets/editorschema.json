{
  "title": "Silver Bullet Editor",
  "type": "object",
  "options": {
    "collapsed": false
  },
  "properties": {
    "data": {
      "type": "string",
      "title": "Paste raw data here...",
      "format":"textarea",
      "default": ""
    },
    "strings": {
      "type": "object",
      "options": {
        "collapsed": false
      },
      "title": "Strings",
      "properties": {
        "title": {
          "type": "string",
          "default": "To come",
          "minLength": 1,
          "title": "Title"
        },
        "subtitle": {
          "type": "string",
          "default": "To come",
          "minLength": 1,
          "title": "Subtitle"
        },
        "source": {
          "type": "string",
          "default": "Source: to come",
          "minLength": 1,
          "title": "Source"
        },
        "footnote": {
          "type": "string",
          "default": "",
          "title": "Footnote"
        }
      }
    },
    "dimensions": {
      "type": "object",
      "id": "dimensions",
      "options": {
        "collapsed": false
      },
      "title": "Chart size",
      "properties": {
        "width": {
          "type": "integer",
          "default": 160,
          "title": "Width (pts/px)"
        },
        "columns": {
          "type": "string",
          "enum": ["1 column", "2 columns", "3 columns"]
        },
        "height": {
          "type": "integer",
          "default": 155,
          "title": "Height (pts/px)"
        }
      }
    }
  }
}
